<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="282.0" prefWidth="398.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="org.example.simplecalculator.controllers.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextField fx:id="txtInput1" />
            <Label fx:id="lblOperator" text="&lt;&gt;">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <TextField fx:id="txtInput2" />
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="btnAddition" mnemonicParsing="false" onAction="#onBtnAdditionClick" text="+" />
            <Button fx:id="btnSubtract" mnemonicParsing="false" onAction="#onBtnSubtractClick" text="-" />
            <Button fx:id="btnMultiply" mnemonicParsing="false" onAction="#onBtnMultiplyClick" text="x" />
            <Button fx:id="btnDivision" mnemonicParsing="false" onAction="#onBtnDivisionClick" text="/" />
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="btnCalculate" mnemonicParsing="false" onAction="#onBtnCalculateClick" text="Calculate" />
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Result:" />
            <Label fx:id="lblResult" text="&lt;result&gt;" />
         </children>
      </HBox>
   </children>
</VBox>
